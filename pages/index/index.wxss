/* pages/index/index.wxss */
/* 导入Material Icons字体 */
@font-face {
  font-family: 'Material Icons';
  font-style: normal;
  font-weight: 400;
  src: url(https://fonts.gstatic.com/s/materialicons/v140/flUhRq6tzZclQEJ-Vdg-IuiaDsNcIhQ8tQ.woff2) format('woff2');
}

.material-icons {
  font-family: 'Material Icons';
  font-weight: normal;
  font-style: normal;
  line-height: 1;
  letter-spacing: normal;
  text-transform: none;
  display: inline-block;
  white-space: nowrap;
  word-wrap: normal;
  direction: ltr;
  -webkit-font-feature-settings: 'liga';
  -webkit-font-smoothing: antialiased;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  width: 100%;
  text-align: center;
}

.title-large {
  font-size: 46rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  text-align: center;
  width: 100%;
}

.title {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.card {
  width: calc(100% - 60rpx); /* 减去内部padding的宽度 */
  margin: 0 auto 40rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 16rpx;
}

/* 图标提示卡片样式 */
.icon-tip .tip-content {
  padding: 10rpx 0;
}

.tip-message {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.fix-btn-container {
  display: flex;
  justify-content: flex-end;
}

.fix-btn {
  display: flex;
  align-items: center;
  background-color: #4696f7;
  color: white;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.device-status .status-content {
  display: flex;
  flex-direction: column;
}

.status-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 20rpx;
}

.label {
  width: 180rpx;
  color: #666;
}

.value {
  flex: 1;
  color: #333;
}

.value.connected {
  color: #4caf50;
  font-weight: bold;
}

.value.disconnected {
  color: #f44336;
}

.signal-strength {
  display: flex;
  flex-direction: row;
}

.signal-bar {
  width: 20rpx;
  height: 30rpx;
  margin-right: 8rpx;
  background-color: #eee;
  border-radius: 4rpx;
}

.signal-bar.active {
  background-color: #4696f7;
}

.connect-btn-container, .monitor-btn-container, .history-btn-container, .start-btn-container {
  margin-top: 30rpx;
}

.health-data .health-content {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  width: 100%;
  text-align: center;
}

.health-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33.33%;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.health-value {
  font-size: 50rpx;
  font-weight: bold;
  color: #4696f7;
  width: 100%;
  text-align: center;
}

.health-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
  width: 100%;
  text-align: center;
}

.update-time {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  margin-bottom: 20rpx;
}

/* 历史记录卡片样式 */
.history-content {
  display: flex;
  flex-direction: column;
}

.history-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 20rpx;
}

.record-count {
  font-weight: bold;
  color: #4696f7;
}

/* 快速开始卡片样式 */
.start-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.start-tip {
  font-size: 28rpx;
  color: #757575;
  margin-bottom: 24rpx;
  text-align: center;
}

.start-steps {
  width: 100%;
  margin-bottom: 30rpx;
}

.step-item {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  padding-left: 40rpx;
  position: relative;
}

.step-item::before {
  content: "";
  position: absolute;
  left: 16rpx;
  top: 12rpx;
  width: 12rpx;
  height: 12rpx;
  background-color: #4696f7;
  border-radius: 6rpx;
}

/* 按钮样式 */
.btn-primary {
  background-color: #4696f7;
  color: #fff;
  border: none;
  width: 100%;
}

.btn-secondary {
  background-color: #f2f2f2;
  color: #333;
  border: 1px solid #ddd;
  width: 100%;
}

.wifi-tip {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff9c4;
  border-radius: 8rpx;
}

.wifi-tip icon {
  margin-right: 10rpx;
}

.wifi-tip text {
  font-size: 26rpx;
  color: #ff8f00;
} 